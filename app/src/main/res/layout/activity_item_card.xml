<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="#DAD5D5"
    app:cardCornerRadius="50dp"
    app:cardElevation="5dp"
    app:cardUseCompatPadding="true"
    app:contentPadding="15dp"
    tools:context=".item_card">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:id="@+id/txtNombreCard"
            android:layout_width="277dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:text="TextView"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/imgBorrar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/baseline_auto_delete_24" />

        <ImageView
            android:id="@+id/imgEditar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/baseline_app_registration_24" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>